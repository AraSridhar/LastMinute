  {
    "manifest_version": 2,
    "name": "Simple Pomodoro Timer DEV",
    "description": "Set intervals of work and rest to maximize productivity",
    "version": "1.0",
    "options_page": "options.html",
    "content_scripts": [
      {
        "matches": [
          "<all_urls>"
        ],
        "js": [
          "options.js"
        ],
        "css": [
          "style.css"
        ]
      }
    ],
    "browser_action": {
      "default_popup": "popup.html",
      "default_icon": "logo48.png"
    }
  }